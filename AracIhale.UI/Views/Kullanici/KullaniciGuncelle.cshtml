
@{
    Layout = "~/Views/Shared/AdminTemplate.cshtml";
}

@using AracIhale.Entities.VM
@model KullaniciVeRolVM

@using (Html.BeginForm("KullaniciGuncelle", "Kullanici", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.KullaniciId)
    
        <div class="form-body">
            <div class="row">
                <div class="form-holder">
                    <div class="form-content">
                        <div class="form-items">
                            <h3>Register Today</h3>
                            <p>Fill in the data below.</p>
                            <!--<form class="requires-validation" novalidate>-->

                            <div class="col-md-4">
                                <div class="form-outline mb-4">
                                    @Html.LabelFor(x => x.Isim, new { @class = "col-md-4 control-label" })
                                    @Html.TextBoxFor(x => x.Isim, new
                                    {
                                        @class = "form-control form-control-lg",
                                        placeholder = "Isim"
                                    })
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-outline mb-4">
                                    @Html.LabelFor(x => x.Soyisim, new { @class = "col-md-4 control-label" })
                                    @Html.TextBoxFor(x => x.Soyisim, new
                                    {
                                        @class = "form-control form-control-lg",
                                        placeholder = "Soyisim"
                                    })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-outline mb-4">
                                    @Html.LabelFor(x => x.KullaniciAdi, new { @class = "col-md-4 control-label" })
                                    @Html.TextBoxFor(x => x.KullaniciAdi, new
                                    {
                                        @class = "form-control form-control-lg",
                                        placeholder = "Kullanıcı Adı"
                                    })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-outline mb-4">
                                    @Html.LabelFor(x => x.Mail, new { @class = "col-md-4 control-label" })
                                    @Html.TextBoxFor(x => x.Mail, new
                                    {
                                        @class = "form-control form-control-lg",
                                        placeholder = "E-posta"
                                    })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-outline mb-4">
                                    @Html.LabelFor(x => x.Sifre, new { @class = "col-md-4 control-label" })
                                    @Html.TextBoxFor(x => x.Sifre, new
                                    {
                                        @class = "form-control form-control-lg",
                                        placeholder = "Şifre"
                                    })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-outline mb-4">
                                    @Html.LabelFor(x => x.Telefon, new { @class = "col-md-4 control-label" })
                                    @Html.TextBoxFor(x => x.Telefon, new
                                    {
                                        @class = "form-control form-control-lg",
                                        placeholder = "Telefon"
                                    })
                                </div>
                            </div>

                            <div class="form-group col-md-6">
                                @Html.LabelFor(x => x.RolId, new { @class = "col-md-4 control-label" })
                                <div class="inputGroupContainer">
                                    <div class="input-group">
                                        @Html.DropDownListFor(x => x.RolId, Model.Roller, new { @class = "form-select", required = true })
                                    </div>
                                </div>
                            </div>

                            <div class="form-button mt-3">
                                <button id="submit" type="submit" class="btn btn-primary">Register</button>
                            </div>
                            <!--</form>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>

    
}
